<%- include('../partials/header', { title: pageTitle, success: typeof success !== 'undefined' ? success : null, error: typeof error !== 'undefined' ? error : null }) %>

<div class="portal-login-container"> <%/* Re-using login container style */%>
    <h1>Forgot Your Password?</h1>
    <p>No worries! Enter your registered first name and phone number below. If they match our records, we'll send a password reset link and an OTP to your registered email address.</p>

    <form action="/customer/forgot-password" method="POST">
        <div>
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="<%= typeof oldInput !== 'undefined' && oldInput.firstName ? oldInput.firstName : '' %>" required>
        </div>
        <div>
            <label for="phoneNumber">Phone Number (e.g., 0712345678):</label>
            <input type="text" id="phoneNumber" name="phoneNumber" value="<%= typeof oldInput !== 'undefined' && oldInput.phoneNumber ? oldInput.phoneNumber : '' %>" pattern="0[17][0-9]{8}" title="Phone number must be 10 digits starting with 01 or 07." required>
        </div>
        <button type="submit">Send Reset Instructions</button>
    </form>
    <p style="margin-top: 15px;"><a href="/customer/login">Back to Login</a></p>
</div>

<%- include('../partials/footer') %>
