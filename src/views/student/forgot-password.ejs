<%- include('../partials/header', { title: pageTitle, success: typeof success !== 'undefined' ? success : null, error: typeof error !== 'undefined' ? error : null }) %>

<div class="portal-login-container"> <%/* Re-using login container style */%>
    <h1>Forgot Your Password?</h1>
    <p>Enter your registered first name and email address below. If they match our records, we'll send a password reset link and an OTP to your email.</p>

    <form action="/student/forgot-password" method="POST">
        <div>
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="<%= typeof oldInput !== 'undefined' && oldInput.firstName ? oldInput.firstName : '' %>" required>
        </div>
        <div>
            <label for="email">Registered Email Address:</label>
            <input type="email" id="email" name="email" value="<%= typeof oldInput !== 'undefined' && oldInput.email ? oldInput.email : '' %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Send Reset Instructions</button>
    </form>
    <p style="margin-top: 15px;"><a href="/student/login">Back to Login</a></p>
</div>

<%- include('../partials/footer') %>
