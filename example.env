# General Settings
NODE_ENV=development
PORT=10000
FRONTEND_URL=http://localhost:10000

# Database
# SQLite is used by default for student/site data (see src/config/database.js)
# MongoDB is used for Customer data (see src/models/customerModel.js)
DATABASE_URL="mongodb://localhost:27017/twoem_customer_portal" # Example for MongoDB. Replace with your actual connection string.

# JWT Authentication
JWT_SECRET="a_very_strong_and_long_random_secret_key_for_jwt" # Important: Make this long and random
JWT_EXPIRE="364d"
JWT_EXPIRE_MS="31449600000" # JWT_EXPIRE in milliseconds (364 * 24 * 60 * 60 * 1000)

# Admin Credentials (Up to 3 admins)
# Generate bcrypt hashes for passwords (see project documentation or use a script)
ADMIN1_EMAIL=admin1@example.com
ADMIN1_NAME="Admin User One"
ADMIN1_PASSWORD_HASH="your_bcrypt_hash_for_admin1_password"

ADMIN2_EMAIL=admin2@example.com
ADMIN2_NAME="Admin User Two"
ADMIN2_PASSWORD_HASH="your_bcrypt_hash_for_admin2_password"

ADMIN3_EMAIL=admin3@example.com
ADMIN3_NAME="Admin User Three"
ADMIN3_PASSWORD_HASH="your_bcrypt_hash_for_admin3_password"

# Email Configuration (using Gmail SMTP requires "App Password")
SMTP_HOST=smtp.example.com
SMTP_PORT=587 # or 465 for SSL
SMTP_USER=youremail@example.com
SMTP_PASS="your_email_app_password" # Gmail App Password if 2FA is enabled
EMAIL_FROM_NAME="Your Application Name"
EMAIL_FROM="Your Application Name <youremail@example.com>"
EMAIL_LOGO_URL="https://i.ibb.co/XxJgqVKp/IMG-20250701-WA0003.jpg" # Default logo, user should replace
CONTACT_RECEIVER_EMAIL=contact@example.com # Where contact form submissions go
REPLY_TO_EMAIL=noreply@example.com # Default Reply-To for contact form emails

# Student Settings
DEFAULT_STUDENT_PASSWORD=Stud@Twoem2025
PASSWORD_MIN_LENGTH=8

# Academic Settings
PASSING_GRADE=60

# Session Secret (for express-session and connect-flash)
SESSION_SECRET="a_very_strong_secret_for_sessions"

# Customer Portal Settings
DEFAULT_CUSTOMER_PASSWORD=Mynet@2025
CUSTOMER_PASSWORD_MIN_LENGTH=8
JWT_CUSTOMER_EXPIRE="1h" # Expiry for customer JWT tokens (e.g., 1h, 7d)
JWT_CUSTOMER_EXPIRE_MS=3600000 # Expiry in milliseconds for customer JWT tokens (1h = 3600000)
BUSINESS_NO="" # !!! IMPORTANT: Set your Mpesa Business Number here for customer payments !!!

# Debugging (optional)
# DEBUG=true
